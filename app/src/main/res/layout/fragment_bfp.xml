<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/bmr_fragment">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_bmr_details"
            android:text="Enter Details Below :"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:id="@+id/bmr_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/enter_bmr_details"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/teal_200"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Weight (in kgs)"
            />
        <EditText
            android:id="@+id/bmr_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bmr_weight"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/teal_200"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Height (in cms)"
            />
        <EditText
            android:id="@+id/bmr_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bmr_height"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/teal_200"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Age"
            />
        <EditText
            android:id="@+id/bmr_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bmr_age"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/teal_200"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Gender"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmr_calculate"
            app:layout_constraintTop_toBottomOf="@id/bmr_gender"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Calculate Bfp">
        </Button>
        <TextView
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmr_result"
            app:layout_constraintTop_toBottomOf="@id/bmr_calculate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>