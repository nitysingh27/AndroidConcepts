<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.BmiFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/whr_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_whr_details"
            android:text="Enter Details Below :"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:id="@+id/whr_waist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/enter_whr_details"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/teal_200"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Waist (in cms)"
            />
        <EditText
            android:id="@+id/whr_hip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/whr_waist"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/teal_200"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Hip (in cms)"
            />
        <EditText
            android:id="@+id/whr_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/whr_hip"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/teal_200"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Gender"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whr_calculate"
            app:layout_constraintTop_toBottomOf="@id/whr_gender"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Calculate">
        </Button>
        <TextView
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whr_result"
            app:layout_constraintTop_toBottomOf="@id/whr_calculate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>